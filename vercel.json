{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "api/payment/initiate.js",
      "use": "@vercel/node",
      "config": { "maxDuration": 30 }
    },
    {
      "src": "api/payment/callback.js",
      "use": "@vercel/node",
      "config": { "maxDuration": 30 }
    },
    {
      "src": "api/payment/status.js",
      "use": "@vercel/node",
      "config": { "maxDuration": 30 }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/build/$1"
    }
  ]
}
